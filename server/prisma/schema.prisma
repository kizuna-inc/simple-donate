generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  create_at DateTime @default(now()) @db.Timestamptz(6)
  update_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  user_info UserConfig[]
  bank_info BankingConfig[]
}

model BankingConfig {
  id Int @id @default(autoincrement())

  name String
  type Int
  no   String
  bank String

  // User Relation
  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  create_at DateTime @default(now()) @db.Timestamptz(6)
  update_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
}

model UserConfig {
  id Int @id @default(autoincrement())

  // User Login
  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  // Detail
  name            String
  description     String
  profileImage    String
  backgroundImage String

  create_at DateTime @default(now()) @db.Timestamptz(6)
  update_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
}

model Transection {
  id            String @id @default(uuid()) @db.Uuid
  name          String
  amount        Int
  message       String
  transactionID String @unique

  create_at DateTime @default(now()) @db.Timestamptz(6)
}
